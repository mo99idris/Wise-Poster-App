<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/edit_toolbar"
        android:id="@+id/lng_toolbar"/>

    <TextView
        android:id="@+id/tv_ar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="@string/lng_ar"
        android:textSize="30sp"

        app:layout_constraintTop_toBottomOf="@id/lng_toolbar"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_en"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="@string/lng_en"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_ar"
        app:layout_constraintLeft_toLeftOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>